extends layout
append head
  link(rel="stylesheet" href="/stylesheets/comic.css")
  script(async defer src="../public/javascript/reviews.js")

block content
    .navbarContainer
      +navbar
    .fullPageGrid
        .grid
            .grid__section.section__image
                .image__actual
                    img(src=comic.imageUrl)
            .grid__section.section__readStatus
                button.shelfButton Add To Collection
                    div.shelf-content
                        p Read Status
                        a(href="") Want To Read
                        a(href="") Read
                        a(href="") Will Read
                        p Collections
                        //-     each collection in collections
                        //-         a(href="collections/#{collection.id}")= collection.name
                        a(href="") my favorites


            .grid__section.section__details
                h1= comic.title
                h2 Author: #{comic.author}
                p#description= comic.description
                .infoRow
                    .infoElement
                        p.label Publisher: 
                        p.info=comic.publisher
                    .infoElement
                        p.label Published: 
                        p.info=comic.publishDate
                    .infoElement
                        p.label Cover Price:
                        p.info=comic.price
                    .infoElement
                        p.label Page Count: 
                        p.info=comic.pages


            .grid__section.section__reviews
              h1 Reviews
                button.reviewTool.review--add add review
                each review in reviews
                  .review
                    .review_tools
                    if userId === review.userId
                        button.reviewTool.review--delete delete review
                        button.reviewTool.review--edit edit review
                    .review_info
                      p Posted by: #{review.User.firstName} #{review.User.lastName}
                    .review_description
                      pre= review.description
        .sidebar





