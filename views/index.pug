            form(action="users/logout" method="POST")
              div.dropdown-content
                button(class="sign-out-btn" type="submit") Sign out
    else
      a(href="/signup") Sign Up
      a(href="/login") Log In
  main
    div.grid-title Newly Released Comics
    div.grid
        div.grid__section.sidebar

        div.grid__section.content
            each comic in comics
                div.grid__image-container
                    img(src=comic.imageUrl class="grid__image")
                    a(class="grid__image-title" href="/login")= comic.title
                    p.grid__image-publisher= comic.publisher

